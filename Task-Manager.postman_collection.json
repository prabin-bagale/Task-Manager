{
	"info": {
		"_postman_id": "task-manager-collection",
		"name": "Task Manager API",
		"description": "Collection of endpoints for the Task Manager application",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "http://localhost:5000/api/auth/register",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "auth", "register"]
						},
						"description": "Register a new user"
					}
				},
				{
					"name": "Login User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "http://localhost:5000/api/auth/login",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "auth", "login"]
						},
						"description": "Login an existing user"
					}
				}
			]
		},
		{
			"name": "Tasks",
			"item": [
				{
					"name": "Get All Tasks",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "http://localhost:5000/api/tasks",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "tasks"]
						},
						"description": "Get all tasks for the authenticated user"
					}
				},
				{
					"name": "Create Task",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"New Task\",\n    \"description\": \"Task description\",\n    \"status\": \"pending\"\n}"
						},
						"url": {
							"raw": "http://localhost:5000/api/tasks",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "tasks"]
						},
						"description": "Create a new task"
					}
				},
				{
					"name": "Update Task",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Updated Task\",\n    \"description\": \"Updated description\",\n    \"status\": \"in-progress\"\n}"
						},
						"url": {
							"raw": "http://localhost:5000/api/tasks/1",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "tasks", "1"]
						},
						"description": "Update an existing task"
					}
				},
				{
					"name": "Delete Task",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "http://localhost:5000/api/tasks/1",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "tasks", "1"]
						},
						"description": "Delete a task"
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "token",
			"value": "your_jwt_token_here",
			"type": "string"
		}
	]
} 